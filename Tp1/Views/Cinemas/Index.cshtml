@model List<TP1.ViewModels.CinemaVM>
@if (Model.Count != 0)
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Nombre de salles</th>
                <th scope="col">Ville</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <th scope="row"><a href="/cinemas/edit/@cinema.Id">@cinema.Nom</a></th>
                    <td>@cinema.NombreSalles</td>
                    <td>@cinema.Ville</td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <h3 class="text-center text-danger">Aucun élément à afficher</h3>
}